

@model weddingPlan.Models.UserReg
<form asp-controller="Home" asp-action="registerAccount"  method="POST">
    First Name<input type="text" asp-for="firstName"><span asp-validation-for="firstName"> </span>
    <br>
    Last Name<input type="text" asp-for="lastName"><span asp-validation-for="lastName"> </span>
    <br>
    Email<input type="text" asp-for="email"><span asp-validation-for="email"> </span>
    <br>
    Password<input type="text" asp-for="password"><span asp-validation-for="password"> </span>
    <br>
    Confirm Password<input type="text" asp-for="confPassword"><span asp-validation-for="confPassword"> </span>
    <br>
    <input type="submit" value="SUBMIT">
</form>

<h1>@ViewBag.Error </h1>
